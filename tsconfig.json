{
  "include": ["index.*", "lib/**/*", "test/**/*"],
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vfile-reporter", "node", "mocha"],
    "typeRoots": ["types"]
  }
}
